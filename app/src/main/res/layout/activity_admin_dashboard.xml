<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:id="@+id/txtAdminTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Dashboard"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btnManageRenters"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Manage Renters"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/txtAdminTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnManageCustomers"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Manage Customers"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnManageRenters"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnManageBookings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Manage Bookings"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnManageCustomers"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnViewComplaints"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="View Complaints"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnManageBookings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
